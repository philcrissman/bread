-form_for @post, :url => post_url(@post) do |form|
  %ul
    %li
      Title
      %br
      =form.text_field :title
    %li
      Excerpt (optional)
      %br
      =form.text_area :excerpt, :rows => 5
    %li
      =form.text_area :body, :rows => 10
    %li
      Tags (comma separate, please. Thanks.)
      %br
      =form.text_field :tag_list
    %li
      =form.submit "Post"
