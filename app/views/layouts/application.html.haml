!!! XML
!!!
%html
  %head
    %title
      -if @post
        =@post.title
      -else
        =Blog::BLOG_NAME
    =stylesheet_link_tag 'styles.css'
    =javascript_include_tag :defaults
    =include_tiny_mce_if_needed
  %body
    -if signed_in?
      #admin_menu
        ="Logged in as #{current_user.email}"
        =link_to "New Post", new_post_url
    #header
      %h1
        =link_to Blog::BLOG_NAME, root_url
      %span.subtitle
      %br
        =Blog::SUBTITLE
    =yield
    #footer
  