!!! XML
!!!
%html
  %head
    %title
      -if @post
        =@post.title
      -else
        =Blog::BLOG_NAME
    =stylesheet_link_tag 'styles.css'
    =stylesheet_link_tag 'theme.css'
    =javascript_include_tag :defaults
    =include_tiny_mce_if_needed
  %body
    #wrapper
      -if signed_in?
        #admin_menu
          ="Logged in as #{current_user.email}"
          =link_to "New Post", new_post_url
      #header
        %h1
          =link_to Blog::BLOG_NAME, root_url
        %span.subtitle
        %br
          =Blog::SUBTITLE
      #content
        #sidebar
          =render :partial => 'shared/sidebar'
        #main
          =yield
      #footer
  